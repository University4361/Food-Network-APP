<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:id ="@+id/order_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_normal"
        android:background="@drawable/view_rectangle_primary_light"
        android:elevation="2dp"
        android:padding="@dimen/margin_normal">

        <TextView
            android:id="@+id/date_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/margin_normal"
            android:text="Date: 14.06.2017"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_size_normal"
            android:layout_marginBottom="@dimen/margin_small"/>

        <TextView
            android:id="@+id/time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/date_value"
            android:layout_marginStart="@dimen/margin_normal"
            android:text="Time: 18:00"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/address_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/time_value"
            android:layout_below="@+id/time_value"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            android:text="Богатырский проспект, д.2"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_size_large" />

        <ImageView
            android:id="@+id/status_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_check_circle_outline"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_size_normal" />
    </RelativeLayout>

</RelativeLayout>
