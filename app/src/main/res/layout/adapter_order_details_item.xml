<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/order_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_normal"
        android:layout_marginStart="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:background="@drawable/view_bottom_line"
        android:padding="@dimen/margin_normal">

        <TextView
            android:id="@+id/name_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_toStartOf="@+id/minus_image"
            android:text="Пицца Цезарь"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/price_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            android:text="300 р"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/multiply_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_toStartOf="@+id/price_value"
            android:text="x"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_size_normal" />

        <ImageView
            android:id="@+id/plus_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_toStartOf="@+id/multiply_label"
            android:src="@drawable/ic_plus"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/amount_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_toStartOf="@+id/plus_image"
            android:text="1"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_size_normal" />

        <ImageView
            android:id="@+id/minus_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_toStartOf="@+id/amount_value"
            android:src="@drawable/ic_minus"
            android:visibility="gone"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

</RelativeLayout>
